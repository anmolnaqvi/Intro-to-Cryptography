# file_hash_compare.py
# Program to generate and compare hash values of text files
# Uses SHA-256 hashing algorithm

import hashlib

def generate_hash(filename):
    """Generate SHA-256 hash for a given text file."""
    try:
        with open(filename, "rb") as f:
            file_data = f.read()
        hash_value = hashlib.sha256(file_data).hexdigest()
        return hash_value
    except FileNotFoundError:
        return f"Error: File '{filename}' not found."

def compare_files(file1, file2):
    """Compare the hash values of two files."""
    hash1 = generate_hash(file1)
    hash2 = generate_hash(file2)

    print(f"\nHash of {file1}: {hash1}")
    print(f"Hash of {file2}: {hash2}")

    if hash1 == hash2:
        print("\n✅ The files are identical - no changes detected.")
    else:
        print("\n⚠️ The files are different - changes haven been detected between the files.")

def main():
    print("=== File Hash Generator & Comparator ===\n")

    # File names (make sure these files exist in the same folder)
    file1 = "file1.txt"
    file2 = "file2.txt"
    file3 = "file3.txt"

    # Generate hashes
    hash1 = generate_hash(file1)
    hash2 = generate_hash(file2)
    hash3 = generate_hash(file3)

    # print
    print("Generated Hashes:")
    print(f"{file1}: {hash1}")
    print(f"{file2}: {hash2}")
    print(f"{file3}: {hash3}")

    # Compare file1 and file2
    print("\nComparing File 1 and File 2:")
    compare_files(file1, file2)

    # Compare file1 and file3
    print("\nComparing File 1 and File 3:")
    compare_files(file1, file3)

if __name__ == "__main__":
    main()
